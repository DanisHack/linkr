{
  "name": "linkr",
  "version": "1.0.0",
  "description": "Beautiful link shortening",
  "scripts": {
    "build": "npm run build-css && npm run build-js",
    "build-js": "mkdir -p frontend/static/dist && webpack --config frontend/config/webpack.js",
    "build-css": "mkdir -p frontend/static/dist && node-sass --output-style compressed frontend/styles/main.scss frontend/static/dist/main.css",
    "build-js-watch": "npm run build-js -- --watch --colors",
    "build-css-watch": "npm run build-css -- --watch",
    "dev": "concurrently --kill-others --prefix name --prefix-colors cyan.bold,yellow.bold,magenta.bold --names HTTP,JS,CSS 'npm run start' 'npm run build-js-watch' 'npm run build-css-watch'",
    "start": "python linkr.py",
    "lint-backend": "flake8 **/*.py",
    "test-backend": "python -m unittest discover -s test/backend -v",
    "cover-backend": "coverage run --source=$(ls | grep -v env | grep -v node_modules | tr '\n' ',') -m unittest discover -s test/backend -v && coverage report -m",
    "coveralls-backend": "npm run cover-backend && coveralls",
    "lint-frontend": "eslint frontend/app test/frontend",
    "test-frontend": "node test/frontend | tap-spec",
    "cover-frontend": "istanbul cover test/frontend --print detail",
    "coveralls-frontend": "npm run cover-frontend && cat coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LINKIWI/linkr.git"
  },
  "author": "Kevin Lin <developer@kevinlin.info>",
  "license": "MIT",
  "pre-commit": [
    "lint-frontend",
    "test-frontend",
    "lint-backend",
    "test-backend"
  ],
  "dependencies": {
    "async": "^2.1.4",
    "babel-core": "^6.11.4",
    "body-parser": "^1.15.2",
    "browser-request": "^0.3.3",
    "clone": "^2.1.0",
    "cookie-parser": "^1.4.3",
    "copy-to-clipboard": "^3.0.5",
    "deep-extend": "^0.4.1",
    "dottie": "^2.0.0",
    "express": "^4.14.0",
    "highlight.js": "^9.9.0",
    "humanize": "0.0.9",
    "json-stringify-pretty-compact": "^1.0.2",
    "lodash.truncate": "^4.4.2",
    "morgan": "^1.7.0",
    "pug": "^2.0.0-beta4",
    "randomstring": "^1.1.5",
    "range": "0.0.3",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-favicon": "^0.0.5",
    "react-helmet": "^3.1.0",
    "react-icons": "^2.2.2",
    "react-loading-hoc": "0.0.2",
    "react-responsive": "^1.2.5",
    "react-router": "^2.6.1",
    "react-syntax-highlighter": "^4.0.1",
    "safe-json-parse": "^4.0.0",
    "string-template": "^1.0.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "concurrently": "^3.3.0",
    "coveralls": "^2.11.15",
    "enzyme": "^2.6.0",
    "eslint": "^3.3.1",
    "eslint-config-uber-jsx": "^3.0.1",
    "eslint-plugin-react": "^6.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "jsdom": "^9.9.1",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "pre-commit": "^1.2.2",
    "react-addons-test-utils": "^15.4.1",
    "sinon": "^1.17.6",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.0",
    "webpack": "^1.13.1"
  }
}
